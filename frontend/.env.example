# Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# Backend API URL
# For local development, use http://localhost:5001
# For production, use your deployed backend URL (e.g., https://your-backend.onrender.com)
REACT_APP_API_URL=http://localhost:5001

# UploadThing server URL (optional, for file uploads via UploadThing)
# Leave blank to use /api/uploadthing
REACT_APP_UPLOADTHING_URL=

# OIDC Provider (optional, for OAuth authentication)
# Leave blank to use JWT authentication
REACT_APP_OIDC_PROVIDER=
